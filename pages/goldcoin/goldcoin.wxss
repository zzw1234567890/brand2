.bg{
  height: 100vh;
  background: #DBDBDB;
}

.header{
  width: 100%;
  height: 400rpx;
  /* background: red; */
    display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* margin-top: -8%; */
   background: linear-gradient(to bottom right, #FF521A , #FF8000);
   font-size: 70rpx;
   color: white;
}

.body_1{
  height: 200rpx;
  background: #E8E8E8;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 40rpx;
  border-bottom: 15rpx solid #DBDBDB;
}

.body_1 .topup{
  border: 1rpx solid #9D9D9D;
  border-radius: 20rpx;
  padding: 15rpx 50rpx;
  color: white;
  background: linear-gradient(to bottom right, #FF521A , #FF8000);
}

.body_1 .withdraw{
  border: 1rpx solid #9D9D9D;
  border-radius: 20rpx;
  padding: 15rpx 50rpx;
  color: white;
  background: linear-gradient(to bottom right, #FF521A , #FF8000);
}

.body_2{
   height: 160rpx;
  background: #E8E8E8;   
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  font-size: 37rpx; 
  /* padding: 20rpx 0 20rpx 50rpx; */
}

.body_2 .details{
    margin-left: 60rpx;
    color: #484848;
}

.body_2 .rightArrow{
   display: inline-block;
  content: " ";
  height: 18rpx;
  width: 18rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #626262;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  margin-right: 60rpx;
}

