.both .header{
  width: 100%;
  height: 530rpx;
  /* background: red; */
    display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: -8%;
   background: linear-gradient(to bottom right, #FF521A , #FF8000);
}

.header .userAvatarUrl{
  width: 28%;
  border: 5rpx solid white;
  border-radius: 50%;
  overflow: hidden;

}
.header .userNickName{
  margin-top: 3%;
  color: white;
}

.bg{
  height: 100vh;
  position: absolute;
  width: 100%;
  background: #E5E4E4;
  z-index: -10;
}

.coverbody{
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: relative;
  background: red;
  
}

.coverbody .body{
  width: 90%;
  height: 680rpx;
  background: white;
  position: absolute;
  top: -80rpx;
  box-shadow:0 4rpx 20rpx 2rpx #BBBBBB;

}

.body .common_img{
  width: 58rpx;
  height:55rpx;
  float: left;
  margin-right: 10rpx;
}

.coverbody .body .common{
   display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 91%;
  height: 50rpx;  
  align-items: center;
  padding: 30rpx;
  border-bottom: 5rpx solid #f4f4f4;
  font-size: 37rpx; 
    box-shadow:0 4rpx 10rpx 2rpx #EBEBEB;

   /* border-top: 5rpx solid #f4f4f4; */
}



.body .rightArrow::after {
  display: inline-block;
  content: " ";
  height: 18rpx;
  width: 18rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c7c7cc;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}


.body .invite {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #FFFFFF;
  border-radius: 0;
  width:100%;
  height: 105rpx;
  /* background: red; */
  align-items: center;
  border-bottom: 5rpx solid #f4f4f4;
   box-shadow:0 4rpx 20rpx 2rpx #eee;
   margin-top: 10rpx;
   z-index: 0;
     font-size: 37rpx; 
     padding-left: 35rpx;

}

.body .invite text{
  margin-left: 5rpx;
}

.body .invite::after{
  border-radius: 0;
    border: none;
}

.body .invite .invitation{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 10rpx;
  margin-top: 20rpx;
}




