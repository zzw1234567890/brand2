.both .header {
  width: 100%;
  height: 530rpx;
  /* background: red; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: -8%;
  background: linear-gradient(to bottom right, #ff521a, #ff8000);
}

.touch {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background: #ff521a;
}

.header {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userAvatarUrl {
  overflow: hidden;
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userimg {
  width: 180rpx;
  height: 180rpx;
}

.header .userNickName {
  /* margin-top: 3%; */
  color: white;
}

.bg {
  height: 100vh;
  position: absolute;
  width: 100%;
  background: #e5e4e4;
  z-index: -10;
}

.coverbody {
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: relative;
  background: red;
}

.coverbody .body {
  width: 90%;
  height: 680rpx;
  background: white;
  position: absolute;
  top: -80rpx;
  box-shadow: 0 4rpx 20rpx 2rpx #bbb;
}

.body .common_img {
  width: 58rpx;
  height: 55rpx;
  float: left;
  margin-right: 10rpx;
}

.coverbody .body .common {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 91%;
  height: 50rpx;
  align-items: center;
  padding: 30rpx;
  border-bottom: 5rpx solid #f4f4f4;
  font-size: 37rpx;
  box-shadow: 0 4rpx 10rpx 2rpx #ebebeb;
  /* border-top: 5rpx solid #f4f4f4; */
}

.body .rightArrow::after {
  display: inline-block;
  content: " ";
  height: 18rpx;
  width: 18rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c7c7cc;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.body .invite {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #fff;
  border-radius: 0;
  width: 100%;
  height: 105rpx;
  /* background: red; */
  align-items: center;
  border-bottom: 5rpx solid #f4f4f4;
  box-shadow: 0 4rpx 20rpx 2rpx #eee;
  margin-top: 10rpx;
  z-index: 0;
  font-size: 37rpx;
  padding-left: 35rpx;
}

.body .invite text {
  margin-left: 5rpx;
}

.body .invite::after {
  border-radius: 0;
  border: none;
}

.body .invite .invitation {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 10rpx;
  margin-top: 20rpx;
}
