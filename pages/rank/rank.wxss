/* pages/rank/rank.wxss */

.container {
  width: 100%;
  height: auto;
  background: #f6f6f6;
}

.main {
  width: 100%;
  height: auto;
}

.box {
  width: 95%;
  height: 300rpx;
  background: #fff;
  margin: 20rpx auto;
  box-shadow: 4rpx 4rpx 6rpx #ccc;
}

.top {
  width: 100%;
  height: 120rpx;
  /* background: red; */
}

.header {
  width: 140rpx;
  height: 120rpx;
  float: left;
  /* background: pink;  */
}

.hImg {
  width: 50px;
  height: 50px;
  display: block;
  margin: 5px 10px;
  border-radius: 50%;
}

.title {
  width: 340rpx;
  height: 120rpx;
  float: left;
  /* background: yellow; */
}

.name {
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  font-size: 32rpx;
  color: #ff521a;
}

.time {
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  /* font-size: 16px; */
  color: #666;
  font-size: 28rpx;
}

.awear {
  width: 200rpx;
  height: 120rpx;
  float: right;
  /* background: pink; */
}

.aImg {
  width: 60rpx;
  height: 60rpx;
  margin: 30rpx 10rpx 30rpx 0;
  float: left;
}

.goden {
  width: 120rpx;
  height: 120rpx;
  display: block;
  line-height: 120rpx;
  font-size: 28rpx;
  float: left;
}

.content {
  width: 100%;
  height: 140rpx;
  /* background: rebeccapurple; */
}

.detail {
  width: 95%;
  margin: 0 auto;
  padding: 10rpx;
  height: 140rpx;
  display: block;
  font-size: 28rpx;
  color: #444;
  border: 2rpx solid #f6f6f6;
  overflow: auto;
  letter-spacing: 2rpx;
  /* box-shadow: 2px 2px 3px #f6f6f6; *//* background: rebeccapurple; */
}
